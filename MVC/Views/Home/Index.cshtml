@{
    ViewData["Title"] = "Página principal";
}

<PageTitle>Iron Gym</PageTitle>

<style>
    body {
        font-family: 'Arial Black', sans-serif;
        background-color: #111;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    .hero-section-custom-container {
        background: url('/img/hero/hero-1.jpg') center center/cover no-repeat;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .hero-text-container-max-width {
        background: rgba(0, 0, 0, 0.6);
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 0 40px rgba(255, 0, 0, 0.6);
    }

        .hero-text-container-max-width span {
            color: #ff3c3c;
            font-size: 24px;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .hero-text-container-max-width h1 {
            font-size: 60px;
            margin: 20px 0;
            line-height: 1.2;
        }

        .hero-text-container-max-width strong {
            color: #ff3c3c;
        }

    .hero-button-inline-block {
        display: inline-block;
        margin-top: 30px;
        padding: 15px 30px;
        background: #ff3c3c;
        color: #fff;
        border-radius: 30px;
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .hero-button-inline-block:hover {
            background: #e60000;
            box-shadow: 0 0 15px #e60000;
        }

    .section-title span {
        color: #ff3c3c;
        font-size: 20px;
        letter-spacing: 1px;
    }

    .section-title h2 {
        font-size: 42px;
        color: #fff;
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cs-item,
    .class-item,
    .ps-item {
        background-color: #1c1c1c;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 60, 60, 0.2);
    }

        .cs-item:hover,
        .class-item:hover,
        .ps-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(255, 60, 60, 0.5);
        }

        .cs-item h4,
        .ci-text h5,
        .ci-text h4,
        .ps-item h3 {
            color: #fff;
            margin-top: 15px;
        }

        .cs-item p,
        .ci-text span,
        .ps-item ul li {
            color: #bbb;
        }

    .primary-btn {
        background: #ff3c3c;
        padding: 12px 25px;
        border-radius: 25px;
        color: #fff;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
        transition: all 0.3s ease;
    }

        .primary-btn:hover {
            background: #e60000;
            box-shadow: 0 0 12px #ff3c3c;
        }

    .ci-pic img {
        width: 100%;
        border-radius: 8px;
    }

    ul {
        list-style: none;
        padding: 0;
    }

        ul li::before {
            content: "✔ ";
            color: #ff3c3c;
            margin-right: 8px;
        }

    section {
        padding: 80px 0;
    }
</style>

