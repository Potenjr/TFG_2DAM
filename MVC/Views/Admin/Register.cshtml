@model EmployeeModel
@{
    Layout = "_EmployeeLoggedInLayout";
}

<body>
    <div class="form-container">
        <form asp-controller="Admin" asp-action="Register" method="post" class="mx-auto" style="max-width: 400px;">
            <div class="form-group">
                <h2 class="text-center" style="color: #ff3c3c;">Registrar nuevo empleado</h2>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label for="name">Nombre</label>
                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Introduce el nombre">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label for="email">Correo electrónico</label>
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Introduce el correo">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col text-center">
                    <small>La contraseña se generará automáticamente y se enviará por correo</small>
                </div>
            </div>
            @if (ViewBag.Errors != null)
            {
                <div class="mt-3">
                    <span class="text-danger">@ViewBag.Errors</span>
                </div>
            }
            <div style="margin-top: 10px;"></div>
            <div class="form-row justify-content-center">
                <div class="form-group col text-center">
                    <button style="background-color: #ff3c3c" type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </form>
    </div>

    
    <partial name="_ValidationScriptsPartial" />
</body>
